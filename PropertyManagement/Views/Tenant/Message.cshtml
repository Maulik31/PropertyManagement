@model IEnumerable<PropertyManagement.Models.Message>

@{
    ViewBag.Title = "Message";
    Layout = "~/Views/Tenant/_LayoutTenant.cshtml";
}

<h2>Message</h2>

<p>
    @Html.ActionLink("Create New", "MessageCreate")
</p>
<table class="table">
    <tr>
        <th>
            Message
        </th>
        <th>
            Date Time
        </th>
        <th>
            Manager Name
        </th>
  
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Message1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Datetime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Manager.FirstName)
        </td>
        
        <td>
            @Html.ActionLink("Message Reply", "MessageReply", new { Managerid=item.Manager_Id , TenantId = item.Tenant_Id }) |
            @Html.ActionLink("Details", "MessageDetails", new { id=item.Message_Id }) |
            @Html.ActionLink("Delete", "MessageDelete", new { id=item.Message_Id })
        </td>
    </tr>
}

</table>
